<fieldset>
  <%= f.label :question_text, "Question" %><br/>
  <%= f.text_area :question_text %><br/>
  <%= f.hidden_field :_destroy %>
  <%= link_to "remove", '#', class:"remove_fields" %>
  <%= f.fields_for :choices do |builder| %>
  	<%= render 'choice_fields', f: builder %>
  <% end %>

  <%= link_to_add_fields "Add Answer", f, :choices %>
  
</fieldset>