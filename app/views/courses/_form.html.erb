<!-- Update fields to reflect the wireframe -->
<%= form_for (@course), :html => { :multipart => true }  do |f| %>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :intro_video %><br />
    <%= f.file_field :video %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :language %><br />
    <%= f.text_field :language %>
  </div>
  <div class="field">
    <%= f.label :hours %><br/>
    <%= f.text_field :hours %>
  </div>



  <%= f.fields_for :choices do |ff| %>

    <div class="field">
      <%= ff.label "Choice for the question:" %><br/>
      <%= ff.text_field :answer %>
    </div>

  <% end %>






<!-- I've begun adding other parts of the create course to this single page till we can split it up.  Perhaps we can divide it up with angular. - Jeremy  -->


  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>




